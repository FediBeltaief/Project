<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project.AjouterProduit">
    <ContentPage.Content>
        <StackLayout>
            <TableView>
                <TableRoot>
                    <TableSection>

                        <EntryCell x:Name="txtId" Label="Id" IsEnabled="False"/>
                        <EntryCell x:Name="txtNom" Label="Name"/>
                        <EntryCell x:Name="txtDescription" Label="Description"/>
                        <EntryCell x:Name="txtPrix" Keyboard="Numeric" Label="Price"/>
                        <EntryCell x:Name="txtURLimage" Label="URLImage"/>
                        <ViewCell>
                            <Picker x:Name="categoryPicker" Title="Choose Category" />
                        </ViewCell>
                    </TableSection>
                </TableRoot>
            </TableView>
            <Button x:Name="btnadd" Clicked="Btnadd_Clicked" Text="Save" BackgroundColor="#001F3F" TextColor="White"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>